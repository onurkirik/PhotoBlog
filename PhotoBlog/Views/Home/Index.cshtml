@model List<Post>
@{
    ViewData["Title"] = "Home Page";
}

<div class="post">
    @foreach (var item in Model)
    {
        <div class="post">
            <h2 class="post-title">@item.Title</h2>
            <div class="post-image">
                <img src="~/img/@item.Photo" alt="@item.Title" />
            </div>
            <div class="post-details">
                <div class="post-tags">
                    @foreach (var tag in item.Tags)
                    {
                        <a href="#">#@tag.Name</a>
                    }
                </div>
            </div>
            <div class="post-time">
                <span data-post-time="@item.CreatedTime.ToString("s")"></span>
            </div>
            <p class="post-desc">@item.Description</p>
        </div>
    }
</div>
