@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    ViewBag.Search = Model.Search;
}


<div class="post">

    @if (!string.IsNullOrEmpty(Model.Search))
    {
        <h3 class="mb-3">Search Results for &ldquo; @Model.Search &ldquo;</h3>
        <hr />
    }

    @foreach (var post in Model.Posts)
    {
        <div class="post">
            <h2 class="post-title">@post.Title</h2>
            <div class="post-image">
                <img src="~/img/@post.Photo" alt="@post.Title" />
            </div>
            <div class="post-details">
                <div class="post-tags">
                    @foreach (var tag in post.Tags)
                    {
                        <a asp-route-q="#@tag.Name">#@tag.Name</a>
                    }
                </div>
            </div>
            <div class="post-time">
                <span data-post-time="@post.CreatedTime.ToString("s")"></span>
            </div>
            <p class="post-desc">@post.Description</p>
        </div>
    }
</div>
